  <% is_collection = @document['type_ssi'] == 'collection' %>
  <% show_availability = @document['type_ssi'] == 'library_record'  || @document['type_ssi'] == 'item'  || @document['type_ssi'] == 'piece' %>
  <% show_item = @document['type_ssi'] == 'subseries'  || @document['type_ssi'] == 'subsubseries'|| @document['type_ssi'] == 'series'  || @document['type_ssi'] == 'subcollection' || @document['type_ssi'] == 'item' %>

  <% if show_availability && ! show_item %>
      <%= render 'catalog/availability',
                  document: @document %>
  <% end %>

  <% if show_item %>
      <%= render 'catalog/sub_items',
                  document: @document %>
  <% end %>
