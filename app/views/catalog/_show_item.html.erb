<%# A show view for a single Item -%>

<div class="row">
  <% @show_tab ||= 'summary' %>

  <div id="tab-sidebar" class="col-sm-2">

    <%= display_resource_thumbnail (document) %>

    <% menu_item_classes = 'tab-menu-item col-md-12' %>

    <div class="tile-btn-fw-secondary">
      <%= link_to 'Summary', catalog_path(document.id, tab: 'summary'), class: "#{tab_class('summary', @show_tab)} #{menu_item_classes}" %>
    </div>

    <% if contains?(:image,@document.id) %>
    <div class="tile-btn-fw-secondary">
      <%= link_to 'Images', catalog_path(document.id, tab: 'images'), class: "#{tab_class('images', @show_tab)} #{menu_item_classes}" %>
    </div>
    <% end %>
    <% if contains?(:pdf,@document.id) %>
    <div class="tile-btn-fw-secondary">
      <%= link_to 'Documents', catalog_path(document.id, tab: 'pdf'), class: "#{tab_class('pdf', @show_tab)} #{menu_item_classes}" %>
    </div>
    <% end %>

    <% if contains?(:audio,@document.id) %>
    <div class="tile-btn-fw-secondary">
      <%= link_to 'Audio', catalog_path(document.id, tab: 'audio'), class: "#{tab_class('audio', @show_tab)} #{menu_item_classes}" %>
    </div>
    <% end %>

    <% if contains?(:video,@document.id) %>
    <div class="tile-btn-fw-secondary">
      <%= link_to 'Video', catalog_path(document.id, tab: 'video'), class: "#{tab_class('video', @show_tab)} #{menu_item_classes}" %>
    </div>
    <% end %>

    <div class="tile-btn-fw-secondary">
      <%= link_to 'Access', catalog_path(document.id, tab: 'access'), class: "#{tab_class('access', @show_tab)} #{menu_item_classes}", onclick: "setTimeout(init_downloads_list, 300);" %>
    </div>

  </div>

  <div id="tab-content" class="col-sm-10">
    <%= render "catalog/show_item_#{@show_tab}", document: document %>
  </div>


</div>
